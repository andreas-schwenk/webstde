{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current TypeScript (TS) File",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "sourceMaps": true,
      "preLaunchTask": "tsc: build - tsconfig.json",
      "console": "integratedTerminal"
    }
  ]
}
